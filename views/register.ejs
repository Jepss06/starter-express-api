<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <title>Register</title>
  <link href="/Auth/css/style.css" rel="stylesheet" />
  <link href="/Auth/css/styles.css" rel="stylesheet" />
  <link rel="stylesheet" href="sweetalert2.min.css">
  <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="background">
  <div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
      <main>
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-7">
              <div class="card shadow-lg border-0 rounded-lg mt-5">
                <img src="/image/logo yadika.png" class="logo">
                <div class="card-header">
                  <h3 class="text-center font-weight-light my-4 mt-5">Register</h3>
                </div>
                <div class="card-body">
                  <form action="/registrasi" method="post">
                    <div class="alert alert-<%= clas %>" role="alert">
                      <%= pesan %>
                    </div>
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control form-control-user" name="username" placeholder="name" value="<%= username %>">
                      <label for="name">username</label>
                    </div>
                    <div class="row mb-3">
                      <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                          <input class="form-control form-control-user" name="password" id="inputPassword" type="password" placeholder="password" autocomplete="off" />
                          <label for="inputPassword">Password</label>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                          <input class="form-control form-control-user" name="pass_confirm" id="inputPasswordConfirm" type="password" placeholder="repeat password" />
                          <label for="inputPasswordConfirm">Password</label>
                        </div>
                      </div>
                    </div>
                    <div class="mt-4 mb-0">
                      <div class="d-grid"><button type="submit" class="tombol" value="register" onclick="pesan('<%= status %>', '<%= pesan %>', '<%= clas %>', '<%= judul %>')">Register</button></div>
                    </div>
                  </form>
                </div>
                <div class="card-footer text-center py-3">
                  <div class="small">Sudah Memiliki Akun?<a href="/login"> Sign in!</a></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="sweetalert2.min.js"></script>
    <script>
      const pesan = (status, pesan, clas, judul) => {
        event.preventDefault();
        Swal.fire({
          icon: clas,
          title: judul,
          text: pesan,
        })
      }
    </script>